<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_menulist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/textView_price"
            android:layout_toStartOf="@+id/textView_price"
            android:text="@string/Rs"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18dp"
            />
        <TextView
            android:gravity="end"
            android:id="@+id/textView_price"
            android:textColor="@color/secondaryTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total item price"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_itemQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryTextColor"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryTextColor"
            android:text="@string/Rs"
            android:textSize="18dp"
            android:textStyle="italic"
            />
        <TextView
            android:textColor="@color/secondaryTextColor"
            android:id="@+id/textView_itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textSize="18dp"

            android:textStyle="italic"
            />

    </LinearLayout>
</LinearLayout>