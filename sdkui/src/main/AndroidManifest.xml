<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.payu.payuui" >

    <application
        android:allowBackup="true"
        android:label="@string/app_name" >
        <activity
            android:name=".PayUBaseActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"

            android:configChanges="orientation|keyboard|screenSize">
        </activity>
        <!-- lets not allow the user to change the orientation.-->
        <activity android:name=".PaymentsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"

            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".PayUBaseActivity2"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"

      >

        </activity>
        <activity android:name=".PayUCreditDebitCardActivity">
        </activity>

        <activity android:name=".PayUVerifyApiActivity">
        </activity>
        <activity android:name=".PayUStoredCardsActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".PayUOneClickPaymentActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:windowSoftInputMode="adjustPan">
</activity>

        <activity android:name=".SavedCards"
            android:configChanges="orientation|keyboard|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"

            android:windowSoftInputMode="adjustPan">
        </activity>



        <activity android:name=".PayUNetBankingActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"

            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>